div(class="modal fade", id="productoModal", tabindex="-1", role="dialog", aria-labelledby="MyModalLabel")
    div(class="modal-dialog", role="document")
        div(class="modal-content")
            div(class="modal-header")
                button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                h4(class="modal-title") Nuevo Producto
            div(class="modal-body form-horizontal")
                div(class="form-group")
                    label(class="col-sm-3 control-label") Descripci√≥n
                    div(class="col-sm-6")
                        input(type="text", class="form-control", ng-model="productoModal.nombre")
                div(class="form-group")
                    label(class="col-sm-3 control-label") Precio
                    div(class="col-sm-4")
                        div(class="input-group")
                            div(class="input-group-addon") $
                            input(type="number", class="form-control currency", ng-model="productoModal.precio", min="0", step="0.01", data-number-to-fixed="2", data-number-stepfactor="100")
                input(type="hidden", ng-model="productoModal.categoria")
            div(class="modal-footer")
                button(type="button", class="btn btn-default", data-dismiss="modal") Cerrar
                button(type="button", class="btn btn-primary", data-dismiss="modal", ng-click="producto.guardar()") Guardar